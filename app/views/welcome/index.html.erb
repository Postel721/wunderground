<div class="row">
	<div class="col-md-6 col-md-offset-1">
		<div class="well">
			<h1>Look Up Your Local Forecast</h1>
			<p>What's the weather like in your city?</p>

			<div>
			   <%= form_tag index_path do %>

				<%= text_field_tag :city, nil, placeholder: "City Name" %><br />
				<%= select_tag :state, options_for_select(@states), :prompt => "Please select" %><br />
				<%= submit_tag "Check Weather" %>
			   <% end %>
			 </div>
		</div>
	</div>
</div>

	<div class="col-md-4 col-md-offset-1">
		<div class="well">
			<%= @locations.each do |location| %>
			<p><%= link_to "#{location.city.gsub("_"," ")}, #{location.state}", root_path(city: location.city, state: location.state) %></p>
			<% end %>
		</div>
	</div>
</div>

<% if @location != nil %>
	<div class="row">
	   <div class="col-md-6 col-md-offset-3">
	    	<div class ="well">
		 	<h1>Welcome To <%= @location %>!</h1>
		  	<p><em>What's the weather like?</em></p>
		  	 <p> Temperature is: <%= @temp_f %>&deg; F/ <%= @temp_c %>&deg; C </p>
		   	<p> Feels like: <%= @real_feel %>&deg; F </p>
		   	<p> <%= @weather_words%> <%= image_tag @weather_icon%> </p>
		   	<p> <%=link_to "Full Forecast", @forecast_link, target: "_blank" %> </p>
	  </div>
	</div>
  </div>
<% end %>